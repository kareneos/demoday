.profile
    border-radius 50%
    width 100px
    height 100px
    border 1px solid white
    display inline-block

button.accordion
    background-color #333333
    color #fff
    cursor pointer
    padding 18px
    width 100%
    border none
    text-align left
    outline none
    font-size 15px
    transition 0.4s
    border-bottom 1px solid #fff
    border-radius 4px

button.accordion.active, button.accordion:hover 
    background-color #333333
    color #F9A91A

.panel-parent
    display none
div.panel 
    padding 0 18px
    background-color white
    //max-height 0
    max-height 500px
    overflow hidden
    transition opacity .3s
    //opacity 0
    //display none

div.panel.show 
    opacity 1


.pregunta
    margin 2em 0
    border 1px solid #F9A91A
.pregunta p
    padding 3%
    margin 0
.puntos
    font-size 30px
    margin  3%
    cursor pointer
    transition .3s
.puntos:hover
    color #f9a91a
.seleccionado 
    color #F9A91A
